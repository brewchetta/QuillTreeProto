<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
  <p style="color:red;">// <%= e %></p>
<% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>
  <%= f.label :bio %><br>
  <%= f.text_area :bio %><br>
  <%= f.submit "Submit" %><br><br>

<% end %>
