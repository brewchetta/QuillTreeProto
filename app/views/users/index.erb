<h1>Users</h1>

<% @users.each do |user| %>
<div style="border: solid black 3px; margin-bottom: 10px;">
  <h3><%= user.name %></h3>
  <p>Bio: <%= user.bio %></p>
  <% if user.stories.count > 0 %>



    <p>Stories:</p>
    <% user.stories.each do |s| %>
      <p><%= link_to s.title, user_story_path(user, s) %></p>
    <% end %>
  <% end %>
  </div>
<% end %>
