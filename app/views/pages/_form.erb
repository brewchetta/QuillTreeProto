<!-- content background page number -->

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p style="color:red;">// <%= e %></p>
  <% end %>
<% end %>

<%= form_for @page do |f| %>

  <%= f.label "Write your story!" %><br>
  <%= f.text_area :content %><br><br>

  <%= f.label "Link to a background image" %><br>
  <%= f.text_field :background %><br><br>

  <%= f.collection_select(:story_id, Story.all, :id, :title) %>

  <%= f.submit %><br><br>

<% end %>
