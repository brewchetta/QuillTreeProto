<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p style="color: red" >// <%= e %></p>
  <% end %>
<% end %>

<%= form_for @story do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :synopsis %><br>
  <%= f.text_area :synopsis %><br><br>

  <%= f.label "Writer" %><br>
  <%= f.collection_select(:user_id, User.all, :id, :name) %>

  <%= f.submit %><br><br>

<% end %>
