<p style="float: right; clear: both">Current User: <%= @user.name %></p>

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p style="color: red" >// <%= e %></p>
  <% end %>
<% end %>


<%= form_for @story, url: url do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :synopsis %><br>
  <%= f.text_area :synopsis %><br><br>

  <%= f.submit %><br><br>

<% end %>
